@page
@model MyEshop.Pages.Admin.ManageUsers.DetailsModel

@{
    ViewData["Title"] = "جزئیات کاربر";
}

<head>
    <style>
        body {
            direction: rtl;
        }
    </style>
</head>
<div dir="rtl">
    <h1>جزئیات کاربر</h1>

    <div>
        <h4>کاربر</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ایمیل
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.Email)
            </dd>
            <dt class="col-sm-2">
                رمز عبور
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.Password)
            </dd>
            <dt class="col-sm-2">
                تاریخ ثبت نام
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.RegisterDate)
            </dd>
            <dt class="col-sm-2">
                ادمین
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Users.IsAdmin)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Users.UserId">ویرایش</a> |
        <a asp-page="./Index">بازگشت به لیست</a>
    </div>
</div>