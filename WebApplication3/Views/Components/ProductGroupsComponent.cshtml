@model IEnumerable<ShowGroupViewModel>

@{ 
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    if ( !((currentController == "Home" && currentAction == "ShowCart") || (currentController == "Account" && currentAction == "Register")) )
    {

        <div class="list-group">
        @foreach (var item in Model)
         {
            <a href="/Group/@item.GroupId/@item.Name" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <span class="fw-bold">@item.Name</span>
            <span class="badge bg-primary rounded-pill">@item.ProductCount</span>
             </a>
         }
        </div>
    }
}
